<div class="container">
  <% if notice %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
  <% end %>
  <h1>
    <%= t("activerecord.models.user_type", count: @user_types.count) %>
  </h1>
  <div class="container" align="right">
    <%= link_to new_user_type_path, class: "btn btn-success" do %>
    <i class="fa fa-plus"></i>
    <%=t :new_user_type %>
    <% end %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>
          <%= UserType.human_attribute_name("name")%>
        </th>
        <th>
          <%= UserType.human_attribute_name("description")%>
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user_types.each do |user_type| %>
      <tr>
        <td>
          <%= user_type.name %>
        </td>
        <td>
          <%= user_type.description %>
        </td>
        <td>
          <%= link_to user_type, class: "btn btn-info" do %>
          <i class="fa fa-eye"></i>
          <%=t :show %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_user_type_path(user_type), class: "btn btn-default" do %>
          <i class="fa fa-edit"></i>
          <%=t :edit %>
          <% end %>
        </td>
        <td>
          <%= link_to user_type, method: :delete, data: { confirm: t('are_you_sure') } , class: "btn btn-danger" do %>
          <i class="fa fa-trash"></i>
          <%=t :delete %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
<div class="container" align="center">
  <%= paginate @user_types %>
</div>
