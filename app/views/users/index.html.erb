<div class="container">
  <% if notice %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
  <% end %>
  <h1>
  <%= t("activerecord.models.user", count: @user.count) %>
  </h1>
  <table class="table">
    <thead>
      <tr>
        <th>
          <%= User.human_attribute_name("email")%>
        </th>
        <th>
          <%= User.human_attribute_name("description")%>
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user.each do |user| %>
      <tr>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.password %>
        </td>
        <td>
          <%= link_to edit_user_path(user), class: "btn btn-default" do %>
          <i class="fa fa-edit"></i>
          <%=t :edit %>
          <% end %>
        </td>
        <td>
          <%= link_to user, method: :delete, data: { confirm: t('are_you_sure') } , class: "btn btn-danger" do %>
          <i class="fa fa-trash"></i>
          <%=t :delete %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
<div class="container" align="center">
  <%= paginate @user %>
</div>
